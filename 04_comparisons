// console.log("2">1) 
// console.log("02">1)
// not good to two different data types, cant be compared

console.log(null>0)    //null=>0,false
console.log(null==0)
console.log(null>=0)

// Equality check == and comparisons work differently
// Comparisons convert null to a number, treated it as zero


console.log(undefined==0)
console.log(undefined>0)
console.log(undefined<0)


// strict check ===, check data type first, so it will check whether conversion will happen or not
console.log("2"===2)
