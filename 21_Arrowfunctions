const user = {
    username: "hunbal",
    price: 999,

    welcomeMessage: function(){
        console.log(`${this.username}, welcome to website`)
        console.log(this)
    },
    // Arrow function
    greeting: () => {
        console.log(`${this.price}, this is the price`)
    }
}

// this => refers to the current context 


